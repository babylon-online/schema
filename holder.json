{
  "description": "JSON Schema for holders of collections",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "http://github.com/toboter/schema/raw/master/holder.json",
  "type": "object",
  "properties": {
    "schema": {
      "type": "string",
      "required": true,
      "enum": [
        "http://github.com/toboter/schema/raw/master/holder.json"
      ]
    },
    "id": {
      "type": [
        "string",
        "number"
      ],
      "required": true
    },
    "name": {
      "type": "string"
    },
    "description": {
      "id": "language-variable",
      "type": "object",
      "patternProperties": {
        "^([a-z]{2})$": {
          "type": "string"
        },
        "additionalProperties": false
      }
    },
    "location": {
      "type": "object",
      "properties": {
        "adress": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "Point",
            "LineString",
            "Polygon",
            "MultiPoint",
            "MultiLineString",
            "MultiPolygon"
          ]
        },
        "coordinates": {
          "type": "array",
          "items": {
            "oneOf": [{
              "type": "string",
              "minItems": 2,
              "maxItems": 3
            }, {
              "type": "array",
              "items": {
                "type": "string",
                "minItems": 2,
                "maxItems": 3
              }
            }]
          }
        }
      }
    },
    "people": [{
      "personData": {
        "$ref": "person.json"
      },
      "participated": {
        "id": "date-variable",
        "type": [{
          "properties": {
            "date-parts": {
              "type": "array",
              "items": {
                "type": "array",
                "items": {
                  "type": [
                    "string",
                    "number"
                  ]
                },
                "maxItems": 3
              },
              "maxItems": 2
            },
            "circa": {
              "type": [
                "string",
                "number",
                "boolean"
              ]
            },
            "literal": {
              "type": "string"
            },
            "raw": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }]
      },
      "role": {
        "oneOf": [{
          "type": "string"
        }, {
          "$ref": "vocabulary_concept.json"
        }]
      },
      "comment": {
        "$ref": "language-variable"
      }
    }],
    "collections": {
      "type": "array",
      "items": {
        "$ref": "http://github.com/toboter/schema/raw/master/collection.json"
      }
    }
  }
}
