{
  "description": "JSON Schema for collection of objects",
  "definitions": {
    "core": {
      "type": "object",
      "properties": {
        "id": {
          "type": [
            "string",
            "number"
          ],
          "required": true
        },
        "name": {
          "type": "string"
        },
        "abbr": {
          "type": "string"
        },
        "description": {
          "id": "language-variable",
          "type": "object",
          "patternProperties": {
            "^([a-z]{2})$": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      }
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "http://github.com/toboter/schema/raw/master/collection.json",
  "type": "object",
  "properties": {
    "schema": {
      "type": "string",
      "required": true,
      "enum": [
        "http://github.com/toboter/schema/raw/master/collection.json"
      ]
    },
    "$ref": "#/definitions/core",
    "holder": {
      "$ref": "holder.json#/definitions/core"
    },
    "excavatedObjects": {
      "type": "array",
      "items": {
        "$ref": "excavated_object.json"
      }
    },
    "archivalResources": {
      "type": "array",
      "items": {
        "$ref": "archival_resource.json#/definitions/core",
        "default": []
      }
    }
  }
}
