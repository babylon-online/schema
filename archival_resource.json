{
  "description": "JSON Schema for archival resources",
  "definitions": {
    "info": {
      "type": "object",
      "properties": {
        "id": {"$ref": "id-attr"},
        "container": {"$ref": "#/definitions/info"},
        "serialNumber": {"$ref": "serial-number-attr"},
        "callNumber": {"$ref": "call-number-attr"}
      }
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "http://github.com/toboter/schema/raw/master/archival_resource.json",
  "type": "object",
  "required": ["schema", "id"],
  "properties": {
    "schema": {
      "type": "string",
      "enum": [
        "http://github.com/toboter/schema/raw/master/archival_resource.json"
      ]
    },
    "id": {
      "id": "id-attr",
      "type": [
        "string",
        "number"
      ]
    },
    "container": {
      "$ref": "#/definitions/info"
    },
    "serialNumber": {
      "id": "serial-number-attr",
      "type": [
        "string",
        "number"
      ]
    },
    "callNumber": {
      "id": "call-number-attr",
      "type": "object",
      "properties": {
        "value": {
          "type": [
            "string",
            "number"
          ]
        },
        "temporary": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "collectionData": {
      "allOf": [
        {
          "$ref": "collection.json#/definitions/info"
        },
        {
          "properties": {
            "holderData": {
              "$ref": "holder.json#/definitions/info"
            }
          }
        }
      ]
    },
    "numberOfPieces": {
      "type": "string"
    },
    "title": {
      "$ref": "shared.json#/definitions/languages"
    },
    "label": {
      "type": "string"
    },
    "provenance": {
      "type": "string"
    },
    "summary": {
      "$ref": "shared.json#/definitions/languages"
    },
    "comment": {
      "$ref": "shared.json#/definitions/languages"
    },
    "measurements": {
      "$ref": "shared.json#/definitions/measurements"
    },
    "locations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "raw": {
            "type": "string"
          },
          "deposited": {
            "$ref": "shared.json#/definitions/date-variable"
          },
          "responsible": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "personData": {
                "$ref": "person.json#/definitions/info"
              }
            },
            "additionalProperties": false
          },
          "comment": {
            "$ref": "shared.json#/definitions/languages"
          },
          "geo": {
            "$ref": "shared.json#/definitions/geo"
          }
        },
        "additionalProperties": false
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "vocabularyData": {
            "$ref": "vocabulary_concept.json#/definitions/info"
          },
          "relevance": {
            "type": "number"
          }
        }
      }
    },
    "accessibility": {
      "type": "object",
      "properties": {
        "condition": {
          "type": "string"
        },
        "restrictions": {
          "type": "string"
        }
      }
    },
    "runtime": {
      "$ref": "shared.json#/definitions/date-variable"
    },
    "people": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "role": {
            "anyOf": [
              {
                "type": "string",
                "enum": [
                  "author",
                  "receipient",
                  "pictured"
                ]
              },
              {"$ref": "vocabulary_concept.json#/definitions/info"}
            ]
          },
          "name": {
            "type": "string"
          },
          "personData": {
            "$ref": "person.json#/definitions/info"
          }
        }
      }
    },
    "citationItems": {
      "type": "array",
      "items": {
        "$ref": "shared.json#/definitions/citation"
      }
    },
    "excavatedObjects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "property": {
            "type": "string",
            "enum": [
              "references",
              "registers",
              "sketches",
              "isPhotographOf"
            ]
          },
          "excavatedObjectData": {
            "$ref": "excavated_object.json#/definitions/info"
          }
        }
      }
    },
    "excavationUnits": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "property": {
            "type": "string",
            "enum": [
              "references",
              "registers",
              "sketches",
              "isPhotographOf"
            ]
          },
          "excavationUnitData": {
            "$ref": "excavation_unit.json#/definitions/info"
          }
        }
      }
    },
    "license": {
      "type": "string"
    },
    "copyrights": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "holderData": {
            "$ref": "person.json#/definitions/info"
          },
          "asserted": {
            "$ref": "shared.json#/definitions/date-variable"
          }
        }
      }
    },
    "attachments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "filename", "mimeType"],
        "properties": {
          "id": {
            "type": [
              "string",
              "number"
            ]
          },
          "filename": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "caption": {
            "type": "string"
          },
          "mimeType": {
            "type": "string"
          },
          "size": {
            "type": "number"
          }
        }
      }
    },
    "options": {
      "type": "object",
      "properties": {
        "relevance": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "relevanceComment": {
          "type": "string"
        },
        "digitalizationRemarks": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
