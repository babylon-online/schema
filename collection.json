{
  "description": "JSON Schema for collection of objects",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "http://github.com/toboter/schema/raw/master/collection.json",
  "type": "object",
  "properties": {
    "schema": {
      "type": "string",
      "required": true,
      "enum": [
        "http://github.com/toboter/schema/raw/master/collection.json"
      ]
    },
    "id": {
      "type": [
        "string",
        "number"
      ],
      "required": true
    },
    "name": {
      "type": "string"
    },
    "abbr": {
      "type": "string"
    },
    "description": {
      "id": "language-variable",
      "type": "object",
      "patternProperties": {
        "^([a-z]{2})$": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "holder": {
      "type": "object",
      "properties": {
        "id": {
          "type": [
            "string",
            "number"
          ]
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "excavatedObjects": {
      "type": "array",
      "items": {
        "$ref": "excavated_object.json"
      }
    },
    "archivalResources": {
      "type": "array",
      "items": {
        "$ref": "http://github.com/toboter/schema/raw/master/archival_resource.json"
      }
    }
  }
}
